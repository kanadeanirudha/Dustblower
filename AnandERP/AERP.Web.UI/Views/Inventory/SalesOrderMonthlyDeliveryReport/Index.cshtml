@model AERP.ViewModel.SalesOrderMasterAndDetailsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    .mfp-content {
        /*width: 70%;*/
    }
</style>
@*<script src="@Url.Content("~/Scripts/AERP_Scripts/Sales/SalesOrderMasterAndDetails.js")" type="text/javascript"></script>*@
<script src="~/Content/Theme/vendors/bower_components/typeahead.js/dist/typeahead.jquery.js"></script>

<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<div class="container" style="padding-bottom:10px;">
    @using (Html.BeginForm("Index", "SalesOrderMonthlyDeliveryReport", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="block-header">
            <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Sale Material GOP Report</h2>
        </div>

        <div class="card" style="margin-bottom: 0px;">
            <div class="card-body card-padding">
                <div class="row">
                    @Html.HiddenFor(m => m.IsPosted)
                    <div class="col-sm-2">
                        <div class="form-group fg-line select">
                            @Html.DropDownListFor(model => model.SalaryMonth, ViewData["MonthName"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Salary Month" })
                        </div>
                        @Html.ValidationMessageFor(model => model.SalaryMonth)
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group fg-line select">
                            @Html.DropDownListFor(model => model.SalaryYear, ViewData["MonthYear"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Salary Year" })
                        </div>
                        @Html.ValidationMessageFor(model => model.SalaryYear)
                    </div>
                    <div class="col-sm-2" style="">
                        <div class="fg-line">
                            <button type="submit" name="submit" id="btnContractSalaryAndInvoiceStatusReportSubmit" class="btn-primary btn">Show</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

<div class="container">

    <div id="aaa">
        <div class="card">
            @*<div class="card-header"></div>*@
            <div class="card-body card-padding">

                    @Html.Partial("~/Views/Inventory/SalesOrderMonthlyDeliveryReport/SalesOrderMonthlyDeliveryReport.aspx")
                
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<script type="text/javascript">
        $(document).ready(function () {

            //SalesOrderMasterAndDetails.Initialize();
            $('#btnShowListforSalesOrder').on("click", function () {

              
                $("#IsPosted").val(true);


            });

        });
</script>

