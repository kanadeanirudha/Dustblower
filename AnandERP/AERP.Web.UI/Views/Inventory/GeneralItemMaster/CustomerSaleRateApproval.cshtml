@model AERP.ViewModel.GeneralItemMasterViewModel
<style type="text/css">
    .mfp-content {
        width: 90% !important;
    }

    #SalaryRules th, #SelectedRules th {
        font-size: 12px;
    }
</style>
<script src="@Url.Content("~/Scripts/AERP_Scripts/TaskNotification/CSRPendingRequest.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/Theme/vendors/bower_components/bootstrap-select/dist/css/bootstrap-select.css")" rel="stylesheet" type="text/css" />

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Approve Customer Sale Rate</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">

            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateCustomerSaleRate">

                @Html.HiddenFor(m => m.TaskCode)
                @Html.HiddenFor(m => m.TaskNotificationDetailsID)
                @Html.HiddenFor(m => m.TaskNotificationMasterID)
                @Html.HiddenFor(m => m.GeneralTaskReportingDetailsID)
                @Html.HiddenFor(m => m.PersonID)
                @Html.HiddenFor(m => m.StageSequenceNumber)
                @Html.HiddenFor(m => m.IsLastRecord)
                @Html.HiddenFor(m => m.InventoryItemCodeUnitLevelCustomerSpecificInfoID)

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        <label> Customer Name</label>
                        <div class="form-group  fg-line">
                            @Model.CustomerName
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label>Customer Branch</label>
                        <div class="form-group  fg-line">
                            @Model.CustomerBranchName
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label>Location</label>
                        <div class="form-group  fg-line">
                            @Model.CentreCode - @Model.UnitName
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label>Item Name</label>
                        <div class="form-group  fg-line">
                            @Model.ItemDescription
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label>UOM Code</label>
                        <div class="form-group  fg-line">
                            @Model.UomCode
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label>Sale Price</label>
                        <div class="form-group  fg-line">
                            @Model.SalePrice
                        </div>
                    </div>
                </div>
                
                <div class="col-sm-12">
                    <div class="form-group fg-line">
                        <select id="SelectedStatus" class="form-control input-sm" style="width:120px">
                            <option value="2">Approved</option>
                            <option value="3">Reject</option>
                        </select>
                    </div>
                </div>

                <div class="widget-bottom">
                    <div style="padding-right: 10px; padding-top: 5px; padding-bottom: 0px; text-align: right;">
                        <button type="button" id="CreateApprovedCustomerSaleRate" class="btn btn-primary">@Resources.ButtonAction_Submit</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        CSRPendingRequest.Initialize();
    })

</script>

