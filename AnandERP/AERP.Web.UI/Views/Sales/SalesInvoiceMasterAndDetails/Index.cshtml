@model AERP.ViewModel.SalesInvoiceMasterAndDetailsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    .mfp-content {
        /*width: 70%;*/
    }
</style>
<script src="@Url.Content("~/Scripts/AERP_Scripts/Sales/SalesInvoiceMasterAndDetails.js")" type="text/javascript"></script>
<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Manage Invoice</h2>
    </div>
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-header">
            <ul class="actions">
                <li class="dropdown">
                    <a href="" data-toggle="dropdown">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li>
                            <a class="mfpAjaxModal" title="Add New" href="@Url.Action("CreateSalesInvoice", "SalesInvoiceMasterAndDetails")">
                                <i class="zmdi zmdi-plus-square"></i>&nbsp;Add New
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="card-body card-padding" style="display:none">

            <form class="row" role="form">

                <div class="col-sm-3">
                    <div class="form-group fg-line">
                        <label>@Html.LabelFor(model => model.MonthName, new { })</label>
                        @Html.DropDownList("MonthName", ViewData["MonthName"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "MonthList*" })
                    </div>
                    @Html.ValidationMessageFor(model => model.MonthName)
                </div>

                <div class="col-sm-3">
                    <div class="form-group fg-line">
                        <label>@Html.LabelFor(model => model.MonthYear, new { })</label>
                        @Html.DropDownList("MonthYear", ViewData["MonthYear"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "YearList*" })
                    </div>
                    @Html.ValidationMessageFor(model => model.MonthYear)
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary" id="btnShowListforSalesInvoice">@Resources.GlobalProperties_ShowList</button>

                </div>
            </form>
        </div>
    </div>

    <div id="ListViewModel"> </div>
</div>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Theme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        
        //SalesInvoiceMasterAndDetails.Initialize();
        SalesInvoiceMasterAndDetails.LoadList();
    });
</script>
